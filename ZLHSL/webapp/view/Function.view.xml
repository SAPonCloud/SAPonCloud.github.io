<mvc:View
	controllerName="zlhsl.controller.Function"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="true">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading >
					<Title id="entityTitle" text="{i18n>title.text.Functions}"/>
				</f:heading>					
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search=".onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
					<OverflowToolbarButton icon="sap-icon://filter" text="Add" type="Transparent" press=".onFilter"/>
					<OverflowToolbarButton icon="sap-icon://add" text="Sort" type="Transparent" press=".onAdd"/>
					<OverflowToolbarButton icon="sap-icon://delete" text="Sort" type="Transparent" press=".onDelete"/>
				</OverflowToolbar>
				<Table
					id="functionsTable"
					inset="false"
					items="{
						path: '/FunctionSet',
						sorter: {
							path: 'FunctionID'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto"
					alternateRowColors="true"
					sticky="ColumnHeaders"
					updateFinished=".onUpdateFinished">
					<columns>
						<Column width="12em">
							<Text text="Function ID"/>
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true" 
								popinDisplay="WithoutHeader">
							<Text text="Function Name"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
							<Text text="Partner" />
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
							<Text text="Partner Type" />
						</Column>
						<Column>
							<Text text="Active"	/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation"  press=".onListItemPress">
							<cells>
								<ObjectIdentifier title="{FunctionID}"/>
								<Text text="{FunctionText}" />
								<Text text="{Partner}" />
								<Text text="{PartnerType}" />
								<!-- <Text text="{Active}" /> -->
								<Switch state="{Active}" customTextOn="Yes" customTextOff="No" enabled="false"> 
									<layoutData>
										<FlexItemData backgroundDesign="Transparent" growFactor="1" />
									</layoutData>
								</Switch>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>